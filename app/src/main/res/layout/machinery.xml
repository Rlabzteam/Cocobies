<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:id="@+id/c1"
                app:cardPreventCornerOverlap="false"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="9dp"
                android:layout_marginTop="7dp">
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/textoff1"-->
            <!--android:textSize="10dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:textColor="@color/colorAccent"/>-->

            <ImageView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"

                    android:id="@+id/imgmac"
            />
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/txttitlemac"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity=""

                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="20dp" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="7dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="21dp"/>


            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/bookmark"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="320dp"
                       android:id="@+id/bookmark_machinery"
            />
            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/bookmarkadd"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="320dp"
                       android:id="@+id/bookmarkadd_machinery"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type :"
                    android:textSize="10dp"
                    android:textColor="@color/ligthblack"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="70dp"/>
            <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10dp"
                    android:id="@+id/mtype"
                    android:textColor="@color/ligthblack"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="70dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enterprises :"
                    android:textSize="10dp"
                    android:textColor="@color/ligthblack"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="95dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/ligthblack"
                    android:id="@+id/avaiable_machinery_enterprises"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="95dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>