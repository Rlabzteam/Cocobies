<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Micro_enterprises"
             android:background="@color/vilote">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ScrollView" tools:ignore="MissingConstraints">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
                      android:gravity="center">

            <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardCornerRadius="9dp"

                        android:id="@+id/card_coconut_water"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"

                        app:cardPreventCornerOverlap="false"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_margin="10dp">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/coconut_water"
                        />
                        <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:layout_marginLeft="200dp"
                                android:background="@drawable/button"
                                android:textColor="@color/white"
                                android:layout_marginTop="60dp"
                                android:gravity="center"
                                android:text="Water Based"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardCornerRadius="9dp"
                        android:id="@+id/card_shell"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"

                        app:cardPreventCornerOverlap="false"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_margin="10dp">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/coconutshell"
                        />
                        <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat"
                                android:textColor="@color/white"
                                android:background="@drawable/button"
                                android:textSize="20dp"
                                android:layout_marginTop="60dp"
                                android:text="Shell Based"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardCornerRadius="9dp"

                        android:id="@+id/card_leafs"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"

                        android:fontFamily="@font/montserrat"
                        app:cardPreventCornerOverlap="false"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_margin="10dp">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/coconutleaf"
                        />
                        <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="200dp"
                                android:background="@drawable/button"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_marginTop="60dp"
                                android:text="Leaf Based"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardCornerRadius="9dp"
                        android:id="@+id/card_copras"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"

                        app:cardPreventCornerOverlap="false"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_margin="10dp">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/coconut_copra"
                        />
                        <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:fontFamily="@font/montserrat"
                                android:background="@drawable/button"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="Copra Based"
                                android:layout_marginTop="60dp"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardCornerRadius="9dp"
                        android:id="@+id/card_husk"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"

                        app:cardPreventCornerOverlap="false"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_margin="10dp">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/coconuthusk"
                        />
                        <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="220dp"
                                android:background="@drawable/button"
                                android:layout_marginTop="60dp"
                                android:textColor="@color/white"
                                android:text="Husk Based"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>