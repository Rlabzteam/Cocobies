<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Nurseryhome"
android:background="@color/vilote">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefreshnurseiesdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="150dp"

                        android:id="@+id/lback_nursery"
                        android:orientation="vertical">


                </LinearLayout>
                <androidx.cardview.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardCornerRadius="9dp"
                        android:id="@+id/card_nurseiesdetails"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        app:cardPreventCornerOverlap="false"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="100dp">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                    > <TextView
                            android:layout_width="290dp"
                            android:layout_height="40dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp"
                            android:fontFamily="@font/montserrat"
                            android:id="@+id/nurseiesdetails_name"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:text="name  "/>
                        <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="10dp"
                                android:id="@+id/nurseiesdetails_place"
                                android:textColor="@color/ligthblack"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="60dp"
                                android:layout_marginTop="35dp"/>


                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginTop="50dp"
                                android:layout_marginBottom="40dp"
                        >

                            <ImageView android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:src="@drawable/bookmark"
                                       android:layout_marginTop="10dp"
                                       android:layout_marginLeft="240dp"
                                       android:id="@+id/bookmark_nurseiesdetails"
                            />
                            <ImageView android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:src="@drawable/bookmarkadd"
                                       android:layout_marginTop="10dp"
                                       android:layout_marginLeft="240dp"
                                       android:id="@+id/bookmarkadd_nurseiesdetails"
                            />
                            <ImageView android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:src="@drawable/saved"
                                       android:layout_marginTop="10dp"
                                       android:layout_marginLeft="200dp"
                                       android:id="@+id/saved_nurseiesdetails"
                            />
                            <ImageView android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:src="@drawable/save"
                                       android:layout_marginTop="10dp"
                                       android:layout_marginLeft="200dp"
                                       android:id="@+id/save_nurseiesdetails"
                            />
                            <ImageView android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:src="@drawable/share"
                                       android:id="@+id/shar_nurseiesdetails"
                                       android:layout_marginTop="10dp"
                                       android:layout_marginLeft="170dp"
                            />
                        </RelativeLayout>






                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardCornerRadius="9dp"
                            android:id="@+id/card_Location_and_Overview"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:cardPreventCornerOverlap="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="310dp">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="vertical"
                        >


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="20dp"
                                    android:id="@+id/Location_and_Overview"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:text="Location and Overview:  "/>


                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                        >


                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/ligthblack"
                                    android:textSize="10dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:textAlignment="gravity"
                                    android:layout_marginTop="80dp"
                                    android:text="content"
                                    android:id="@+id/txt_Location_and_Overview"
                                    android:layout_marginBottom="25dp"/>


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>




    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>