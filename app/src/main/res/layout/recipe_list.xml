<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:orientation="horizontal"
                            android:id="@+id/c_all_process"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardCornerRadius="14dp">

                        <ImageView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/img_all_process"
                        />
                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/youtube"
                                android:layout_marginLeft="60dp"
                                android:layout_marginTop="50dp"

                        />
                            <TextView
                                    android:layout_width="140dp"
                                    android:layout_height="50dp"
                                    android:id="@+id/txttitle_all_process"
                                    android:textSize="15dp"

                                    android:fontFamily="@font/montserrat"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_marginLeft="170dp"
                                    android:layout_marginTop="15dp" />
                            <ImageView android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:src="@drawable/bookmark"
                                       android:layout_marginTop="5dp"
                                       android:layout_marginLeft="320dp"
                                       android:id="@+id/bookmark_product_rec"
                            />
                            <ImageView android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:src="@drawable/bookmarkadd"
                                       android:layout_marginTop="5dp"
                                       android:layout_marginLeft="320dp"
                                       android:id="@+id/bookmarkadd_product_rec"
                            />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Type :"
                                android:textSize="10dp"
                                android:textColor="@color/ligthblack"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="170dp"
                                android:layout_marginTop="70dp"/>
                        <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Coconut Product"
                                android:textSize="10dp"
                                android:textColor="@color/ligthblack"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="200dp"
                                android:layout_marginTop="70dp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enterprises :"
                                android:textSize="10dp"
                                android:textColor="@color/ligthblack"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="260dp"
                                android:layout_marginTop="95dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="10dp"
                                android:fontFamily="@font/montserrat"
                                android:textColor="@color/ligthblack"
                                android:id="@+id/avaiable_process_enterprises"
                                android:layout_marginLeft="330dp"
                                android:layout_marginTop="95dp"/>
                        <TextView
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:text=""
                                android:textSize="7dp"
                                android:id="@+id/txt_all_process_id"
                                android:textColor="@color/white"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="1dp"/>



                    </androidx.cardview.widget.CardView>
    </RelativeLayout>





</LinearLayout>